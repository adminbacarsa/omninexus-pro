{
  "name": "omninexus-pro",
  "version": "1.0.0",
  "description": "Plataforma de inversores, caja chica y flujo de fondos. Firebase + Next.js.",
  "private": true,
  "scripts": {
    "dev": "npm run dev --workspace=web",
    "dev:web": "npm run dev --workspace=web",
    "dev:functions": "npm run serve --workspace=functions",
    "build": "npm run build --workspace=web",
    "build:functions": "npm run build --workspace=functions",
    "deploy": "npm run build && firebase deploy --force",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:firestore": "firebase deploy --only firestore",
    "deploy:spark": "npm run build && firebase deploy --only \"hosting,firestore\""
  },
  "workspaces": [
    "apps/web",
    "apps/functions"
  ],
  "keywords": ["firebase", "nextjs", "inversores", "caja-chica", "flujo-fondos"],
  "license": "ISC"
}
